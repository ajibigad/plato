<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ajibigad.udacity.plato.SearchResultsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.ajibigad.udacity.plato.SearchResultsActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.ajibigad.udacity.plato.SearchResultsActivity"
        tools:listitem="@layout/search_results_item">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_error_message_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/search_results_error_message"
        android:textSize="20sp"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_height="42dp"
        android:layout_width="42dp"
        android:layout_gravity="center"
        android:visibility="invisible" />


</FrameLayout>
